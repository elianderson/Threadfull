<%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= select(:product, :category, Category.all, :name) %>
  </div>
  <div class="field">
    <%= f.label :desc_short %><br />
    <%= f.text_field :desc_short %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= label :thumbnail, "Thumbnail" %><br />
    <%= file_field_tag :thumbnail %>
  </div>
  <div class="field">
    <%= label :image, "Image" %><br />
    <%= file_field_tag :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
