<div id="prod">
      <%= image_tag "products/" + @product.get_image, :class => "main", :size => "455x500" %>
    <div id="prod-info" />
      <h2><%= @product.title %></h2>
      <p id="prod-price">$<%= @product.price / 100 %></p>
      <p><%= @product.description %></p>
      <a id="buy-button" href="<%= @product.link %>">Buy it</a>
  </div>
  <div id="share-links">
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
      <fb:like href="http://threadfull.rubypdx.com/" show_faces="false" width="450" font="arial"></fb:like>
    <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
      <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
  </div>
  <div id="comments">
    <script src="http://connect.facebook.net/en_US/all.js#appId=132585060131786&amp;xfbml=1"></script>
    <fb:comments numposts="10" width="425" publish_feed="true"></fb:comments>
  </div>
